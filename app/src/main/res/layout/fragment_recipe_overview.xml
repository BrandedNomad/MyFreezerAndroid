<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="0dp"
        android:clipToPadding="true"
        android:fillViewport="true"
        android:padding="0dp"
        android:scrollbarStyle="insideOverlay">

        <LinearLayout
            android:id="@+id/recipeOverview"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/recipeOverviewImage"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="-20dp"
                    android:layout_marginLeft="-20dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recipeDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recipeOverviewTitle"
                    style="@style/heading_italic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/space_default"
                    android:layout_marginTop="@dimen/space_default"
                    android:text="Title Text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/recipeDetailPreferencesDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_default">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/preferenceGluten"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_s"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/preferenceGlutenIcon"
                            android:layout_width="@dimen/icon_standard"
                            android:layout_height="@dimen/icon_standard"
                            android:layout_marginRight="@dimen/space_xs"
                            android:src="@drawable/circle" />

                        <TextView
                            android:id="@+id/preferenceGlutenText"
                            style="@style/body_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="gluten free" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/preferenceDiary"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_s"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/preferenceDairyIcon"
                            android:layout_width="@dimen/icon_standard"
                            android:layout_height="@dimen/icon_standard"
                            android:layout_marginRight="@dimen/space_xs"
                            android:src="@drawable/circle" />

                        <TextView
                            android:id="@+id/preferenceDairyText"
                            style="@style/body_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="dairy free" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/preferenceVegan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_s"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/preferenceVeganIcon"
                            android:layout_width="@dimen/icon_standard"
                            android:layout_height="@dimen/icon_standard"
                            android:layout_marginRight="@dimen/space_xs"
                            android:src="@drawable/circle" />

                        <TextView
                            android:id="@+id/preferenceVeganText"
                            style="@style/body_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="vegan" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/preferenceHealthy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_s"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/preferenceHealthyIcon"
                            android:layout_width="@dimen/icon_standard"
                            android:layout_height="@dimen/icon_standard"
                            android:layout_marginRight="@dimen/space_xs"
                            android:src="@drawable/circle" />

                        <TextView
                            android:id="@+id/preferenceHealthyText"
                            style="@style/body_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="healthy" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/preferenceVegetarian"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_s"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/preferenceVegetarianIcon"
                            android:layout_width="@dimen/icon_standard"
                            android:layout_height="@dimen/icon_standard"
                            android:layout_marginRight="@dimen/space_xs"
                            android:src="@drawable/circle" />

                        <TextView
                            android:id="@+id/preferenceVegetarianText"
                            style="@style/body_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="vegetarian" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/preferenceFodmap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_s"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/preferenceFodmapIcon"
                            android:layout_width="@dimen/icon_standard"
                            android:layout_height="@dimen/icon_standard"
                            android:layout_marginRight="@dimen/space_xs"
                            android:src="@drawable/circle" />

                        <TextView
                            android:id="@+id/preferenceFodmapText"
                            style="@style/body_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="fodmap" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="vertical"
                android:paddingLeft="@dimen/space_default"
                android:paddingRight="@dimen/space_default">

                <TextView
                    android:id="@+id/recipeOverviewDescription"
                    style="@style/body_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Instructions" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>
