<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/recipe_card_inner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recipe_card_height"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/recipe_card_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:scaleType="fitXY"
                android:src="@drawable/fake_recipe"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="4"
                android:layout_marginLeft="@dimen/space_default"
                android:layout_marginBottom="@dimen/space_default"
                android:layout_marginTop="@dimen/space_l"
                android:layout_marginRight="@dimen/space_default">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/recipe_card_title"
                        style="@style/heading_italic"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pomodoro"
                        android:layout_marginBottom="@dimen/space_s"/>
                    <TextView
                        android:id="@+id/recipe_card_body"
                        style="@style/body_2"
                        android:textColor="@color/on_surface_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A rich and authentic Italian tomato based pasta"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="2"
                    android:layout_marginTop="8dp"
                    android:gravity="bottom">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/space_default">
                        <ImageView
                            android:layout_width="@dimen/icon_standard"
                            android:layout_height="@dimen/icon_standard"
                            android:src="@drawable/favorite_filled"
                            app:tint="@color/icon_red"/>
                        <TextView
                            android:id="@+id/recipe_card_icon_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="@color/icon_red"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/space_default">
                        <ImageView
                            android:layout_width="@dimen/icon_standard"
                            android:layout_height="@dimen/icon_standard"
                            android:src="@drawable/time"
                            app:tint="@color/icon_orange"/>
                        <TextView
                            android:id="@+id/recipe_card_icon_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textColor="@color/icon_orange"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/icon_standard"
                            android:layout_height="@dimen/icon_standard"
                            android:src="@drawable/vegan"
                            app:tint="@color/icon_green"/>
                        <TextView
                            android:id="@+id/recipe_card_icon_veg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="vegan"
                            android:textColor="@color/icon_green"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</layout>
