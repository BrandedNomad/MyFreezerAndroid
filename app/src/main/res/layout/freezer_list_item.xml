<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:id="@+id/freezerListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/surface"
            android:layout_margin="8dp"
            android:gravity="center_vertical"

            >
            <ImageView
                android:id="@+id/freezerListItemDecrement"
                android:layout_height="24dp"
                android:layout_width="24dp"
                android:src="@drawable/remove"
                app:tint="@color/black"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:gravity="center_horizontal"

                >
                <TextView
                    android:id="@+id/freezerListItemName"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="Chicken Breast"
                    style="@style/heading_6"
                    android:textColor="@color/on_primary"
                    />
                <TextView
                    android:id="@+id/freezerListItemQuantity"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="5"
                    style="@style/heading_6"
                    android:textColor="@color/on_primary"/>
                <TextView
                    android:id="@+id/freezerListItemUnit"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="pcs"
                    style="@style/heading_6"
                    android:textColor="@color/on_primary"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/freezerListItemIncrement"
                android:layout_height="24dp"
                android:layout_width="24dp"
                android:src="@drawable/add"
                app:tint="@color/black" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</layout>
